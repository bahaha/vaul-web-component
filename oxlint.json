{
    "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
    "rules": {
        "typescript": "error",
        "unicorn": "warn",
        "import": "error"
    },
    "env": {
        "browser": true,
        "es2022": true,
        "node": true
    },
    "globals": {
        "customElements": "readonly",
        "HTMLElement": "readonly"
    },
    "ignorePatterns": ["dist/**", "node_modules/**", "*.min.js", "coverage/**"],
    "plugins": [],
    "settings": {}
}
